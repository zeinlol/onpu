(defrule R3(days day)(works three works)=>(assert (free_time no)))
(defrule R4(days week)(works one work)=>(assert (free_time yes)))
(defrule R5(days week)(works two works)=>(assert (free_time maybe)))
(defrule R6(days week)(works three work)=>(assert (free_time no)))
(defrule R7(days month)(works one work)=>(assert (free_time yes)))
(defrule R8(days month)(works two works)=>(assert (free_time yes)))
(defrule R9(days month)(works three works)=>(assert (free_time maybe)))
(defrule R10(temper holodno)(rain rain)=>(assert (weather bad)))
(defrule R11(temper holodno)(rain no rain)=>(assert (weather normal)))
(defrule R12(temper holodno)(rain snow)=>(assert (weather bad)))
(defrule R13(temper teplo)(rain rain)=>(assert (weather normal)))
