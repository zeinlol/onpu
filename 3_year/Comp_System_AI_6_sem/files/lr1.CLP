(deffacts days (day)(week)(month))
(deffacts works (one work)(two works)(three works))
(deffacts temper (holodno)(teplo)(moroz))
(deffacts rain (rain)(no rain)(snow))

(defrule R1(days day)(works one work)=>(assert (free_time maybe)))
